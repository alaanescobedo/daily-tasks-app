{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths":{
      "@modules/*":["modules/*"],
      "@setup/*":["setup/*"],
      "@ui/*":["ui/*"],
      "@components/*":["ui/components/*"],
      "@utils/*":["utils/*"], 
    },
  },
  "include": [
    "src",
    "vite.config.ts",
    "**/*.test.ts",
    "./.storybook/*"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}